{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "version": "1.0.0"
  },
  "paths": {
    "/respondent/add": {
      "post": {
        "tags": [
          "Respondent"
        ],
        "description": "API for managing respondent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddRespondentRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddRespondentResponse"
                }
              }
            }
          }
        }
      }
    },
    "/respondent/status/{surveyName}/{respondentId}": {
      "get": {
        "tags": [
          "Respondent"
        ],
        "description": "API to get the status of a respondent for a survey",
        "parameters": [
          {
            "in": "path",
            "name": "surveyName",
            "required": true,
            "description": "The name of the survey"
          },
          {
            "in": "path",
            "name": "respondentId",
            "required": true,
            "description": "The ID of the respondent"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddRespondentResponse"
                }
              }
            }
          }
        }
      }
    },
    "/respondent/status/{surveyName}": {
      "get": {
        "tags": [
          "Respondent"
        ],
        "description": "API to get all respondents for a survey",
        "parameters": [
          {
            "in": "path",
            "name": "surveyName",
            "required": true,
            "description": "The name of the survey"
          },
          {
            "in": "query",
            "name": "needDetailedResponse",
            "required": false,
            "description": "Whether to include detailed response",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AddRespondentResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddRespondentRequest": {
        "type": "object",
        "properties": {
          "respondentId": {
            "type": "string",
            "example": "1234567890"
          },
          "surveyName": {
            "type": "string",
            "example": "survey1"
          },
          "needRealtimeResponse": {
            "type": "boolean",
            "example": true
          },
          "needDetailedResponse": {
            "type": "boolean",
            "example": true
          },
          "datapoints": {
            "type": "array",
            "example": [
              {}
            ]
          },
          "cleaningSettings": {
            "type": "object",
            "example": {}
          },
          "reviewSettings": {
            "type": "object",
            "example": {}
          }
        }
      },
      "AddRespondentResponse": {
        "type": "object",
        "properties": {
          "jobId": {
            "type": "string",
            "example": "1234567890"
          },
          "status": {
            "type": "number",
            "example": 200
          },
          "message": {
            "type": "string",
            "example": "COMPLETED"
          },
          "results": {
            "type": "object",
            "example": {}
          }
        }
      },
      "RespondentResults": {
        "type": "object",
        "properties": {
          "isRespondentExcluded": {
            "type": "boolean",
            "example": true
          },
          "redemScore": {
            "type": "number",
            "example": 10
          },
          "detailedResponse": {
            "type": "object",
            "example": {}
          }
        }
      }
    }
  },
  "tags": []
}